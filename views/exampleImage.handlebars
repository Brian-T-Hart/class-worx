<body>
    <div>Hello</div>
    <div>
    <a href="#" id="upload_widget_opener">Add/Change Image</a>
    </div>
    <div id="imageDiv">
    </div>

    
    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    
    <script type="text/javascript">
        var secure_url;

        document.getElementById("upload_widget_opener").addEventListener("click", function () {
            cloudinary.openUploadWidget({ 
                cloud_name: 'dfonttj4w', 
                upload_preset: 'firv62ul',
                sources: ['local', 'url', 'facebook', 'instagram', 'dropbox', 'google_photos'], 
            },
            function (error, result) {
                if (error) {
                    console.log('error ', error)
                }
                else {
                    console.log('result[0].secure_url ', result[0].secure_url);
                    secure_url = result[0].secure_url;
                    document.getElementById("imageDiv").innerHTML = '<img src="' + secure_url + '"/>';
                }})
        }, false);

    </script>
</body>