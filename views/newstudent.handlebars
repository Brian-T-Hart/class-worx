<body>

    <div class="container">
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputStudentFirstName" class="col-form-label">First Name</label>
                    <input type="text" class="form-control" id="inputStudentFirstName" placeholder="First Name" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputStudentLastName" class="col-form-label">Last Name</label>
                    <input type="text" class="form-control" id="inputStudentLastName" placeholder="Last Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label for="inputStudentEmail" class="col-form-label">Email</label>
                    <input type="email" class="form-control" id="inputStudentEmail" placeholder="studentemail@email.com" required>
                </div>
                <div class="form-group col-6">
                    <label for="inputStudentPhone" class="col-form-label">Phone</label>
                    <input type="text" class="form-control" id="inputStudentPhone" placeholder="555-555-5555">
                </div>
            </div>
            <div class="form-group">
                <label for="inputStudentImage" class="col-form-label">Student Image</label>
                <input type="text" class="form-control" id="inputStudentImage" placeholder="Copy and Paste Image URL">
            </div>
            <div class="form-row">
                <div class="form-group col-2">
                    <label for="selectGrade">Select Grade</label>
                    <select multiple class="form-control" id="selectGrade">
                        <option>K</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9 Freshman</option>
                        <option>10 Sophmore</option>
                        <option>11 Junior</option>
                        <option>12 Senior</option>
                        <option>N/A</option>
                    </select>
                </div>
                <div class="form-group col-2">
                    <label for="selectGender">Select Gender</label>
                    <select multiple class="form-control" id="selectGender">
                        <option>Male</option>
                        <option>Female</option>
                        <option>N/A</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>

</html>