
    {{!-- This page displays the students for a specific class --}}

<body>
    <!-- Navbar -->
    <nav class="fixed-top navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" id="home-button" href="/dashboard">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    {{!-- <li class="nav-item active">
                        <a class="nav-link" href="/students">Students
                            <span class="sr-only">(current)</span>
                        </a>
                    </li> --}}
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{students.0.schedules.0.class.teacher.teacher_userName}}</a>
                    </li>
                    <li id="logoff">
                        <a class="nav-link" href="/account/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <h3 class="col-10">Period {{students.0.schedules.0.class.class_period}}: {{students.0.schedules.0.class.class_name}}</h3>
            <span class="col-2">
                <form action="/newStudent" method="GET">
                    <button type="submit" id="add-student" class="btn btn-primary pull-right">Add Student</button>
                </form>
            </span>
        </div>
    </div>

    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-12">
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th><a href="/class/{{students.0.schedules.0.class.class_id}}">Name</a></th>
                                <th><a href="/classbypoints/{{students.0.schedules.0.class.class_id}}">Points</a></th>
                                <th>Hall Pass</th>
                                <th>Homework Pass</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- begin placeholder row 1 element-->
                            {{#each students}} {{#if this.student_active}}
                            <tr>
                                <td>
                                    <!-- Trigger modal with a button -->
                                    <button id="iconImageBtn" type="button" data-toggle="modal" data-target="#studentModal{{this.student_id}}">
                                        <img class="icon img-responsive" src="{{this.student_image}}" alt="">
                                    </button>

                                    <!-- Student info Modal -->
                                    <div class="modal fade" id="studentModal{{this.student_id}}" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">{{this.student_firstName}}&nbsp;{{this.student_lastName}}</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <img class="img-responsive" src="{{this.student_image}}" alt="" style="max-width: 400px; height: auto;">
                                                    <p id="studentGender">Gender: {{this.student_gender}}</p>
                                                    <p id="studentGrade">Grade: {{this.student_gradeLevel}}</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <form action="/editStudent/{{this.schedules.0.class.class_id}}/{{this.student_id}}" method="GET">
                                                        <button action="#" type="submit" class="btn btn-default">edit</button>
                                                    </form>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                    
                                </td>
                                <td>
                                    <h5 id="eachStudentName">{{this.student_firstName}} 
                                        {{this.student_lastName}}
                                        </h5>
                                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#notesModal{{this.student_id}}">Notes</button>
                                    
                                    <!-- Notes Modal -->
                                    <div class="modal fade" id="notesModal{{this.student_id}}" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Notes Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Notes for {{this.student_firstName}}&nbsp;{{this.student_lastName}}</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-row">
                                                        <div class="form-group col-12">
                                                            <form action="/editNotes/{{this.schedules.0.class.class_id}}/{{this.student_id}}" method="POST">
                                                                <textarea class="form-control" name="inputStudentNotes" rows="20" id="inputStudentNotes" placeholder="student notes">{{this.student_notes}}</textarea>
                                                                <br>
                                                                <button action="#" type="submit" class="btn btn-default">save</button>
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5 id="student-points{{this.student_id}}">{{this.student_score}}
                                    </h5>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <form class="updateValueForm" action="/api/points/{{this.schedules.0.class.class_id}}/{{this.student_id}}/5" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary pointsBtn">+5</button>
                                        </form>
                                        <form class="updateValueForm" action="/api/points/{{this.schedules.0.class.class_id}}/{{this.student_id}}/10" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary pointsBtn">+10</button>
                                        </form>
                                        <form class="updateValueForm" action="/api/points/{{this.schedules.0.class.class_id}}/{{this.student_id}}/-5" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary pointsBtn">-5</button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <h5 id="hallPass{{this.student_id}}">{{this.student_hallPass}}
                                    </h5>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <form class="updateValueForm" action="/api/hallpass/{{this.schedules.0.class.class_id}}/{{this.student_id}}/1" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary hallPassBtn">+1</button>
                                        </form>
                                        <form class="updateValueForm" action="/api/hallpass/{{this.schedules.0.class.class_id}}/{{this.student_id}}/-1" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary hallPassBtn">-1</button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <h5 id="hwPass{{this.student_id}}">{{this.student_homeworkPass}}
                                    </h5>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <form class="updateValueForm" action="/api/homeworkPass/{{this.schedules.0.class.class_id}}/{{this.student_id}}/1" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary hwPassBtn">+1</button>
                                        </form>
                                        <form class="updateValueForm" action="/api/homeworkPass/{{this.schedules.0.class.class_id}}/{{this.student_id}}/-1" method="POST">
                                            <button id="{{this.student_id}}" type="submit" class="btn btn-secondary hwPassBtn">-1</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                                <!--end Placeholder row1-->
                                {{/if}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript" src="/assets/javascript/specificClass.js"></script>

</body>