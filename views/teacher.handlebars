
    {{!-- This page displays the list of classes --}}

<body>
    <!-- Navbar -->
    <nav class="fixed-top navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" id="home-button" href="#">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/students">Students
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{classes.0.teacher.teacher_userName}}</a>
                    </li>
                    <li id="logoff">
                        <a class="nav-link" href="/account/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <br>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <h1 class="col-10">Class List
            </h1>
            <span class="col-2">
                <button class="btn btn-primary pull-right" type="button" data-toggle="modal" data-target="#addClassModal">Add Class
                </button>
            </span>
        </div>
    </div>

    <!-- Class list to be dynamically inserted within this jumbotron-->
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <div class="col-12">
                    <!-- begin placeholder element-->
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Period</th>
                                <th>Class</th>
                                <th>Subject</th>
                                {{!-- <th>Points</th> --}}
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each classes}} {{#if this.class_active}}
                            <tr>
                                <td>{{this.class_period}}</td>
                                <td>{{this.class_name}}</td>
                                <td>{{this.class_subject}}</td>
                                {{!-- <td>{{this.class_score}}</td> --}}
                                <td>
                                    <form action="/class/{{this.class_id}}" method="get" type="hidden">
                                        <button type="submit" class="btn btn-primary">View Class
                                        </button>
                                    </form>
                                </td>
                                <td id="editColumn">
                                    <form action="/editClass/{{this.class_id}}" method="get" type="hidden">
                                        <button id="editClassBtn" class="btn" type="submit">Edit
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{/if}} {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addClassModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add New Class</h4>
                </div>
                <div class="modal-body">
                    <form action="/dashboard" method="POST">
                        <label for="className">Class Name: </label>
                        <input name="className" id="className" class="form-control" placeholder="Algebra" required="" autofocus="" />
                        <label for="classSubject">Class Subject: </label>
                        <input name="classSubject" id="classSubject" class="form-control" placeholder="Math" required="" autofocus="" />
                        <label for="classPeriod">Class Period: </label>
                        <input name="classPeriod" id="classPeriod" class="form-control" placeholder="0-7" required="" autofocus="" />
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Add Class</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>